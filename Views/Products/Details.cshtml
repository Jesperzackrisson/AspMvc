@model ProjectMvc.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="productTitle text-center">Information om den valda produkten</h1>



<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h3 class="card-title">@Html.DisplayFor(model => model.Name) </h3>
                <a asp-controller="Products" asp-action="Index">
                    <i class="fas fa-times text-danger"></i>
                </a>   
            </div>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Html.DisplayFor(model => model.ImageUrl)" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Produkt Beskrivning</h4>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <h2 class="mt-5">
                        @Html.DisplayFor(model => model.Price):-
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-success btn-rounded">Köp</button>
                    <ul class="list-unstyled mt-5">
                        <li class="mb-1"><i class="fas fa-truck text-secondary m-2"></i>Fri frakt</li>
                        <li class="mb-1"><i class="fas fa-stopwatch text-secondary m-2"></i>Leverans samma dag</li>
                        <li class="mb-1"><i class="fas fa-undo text-secondary m-2 "></i>30 dagars öppet köp</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
