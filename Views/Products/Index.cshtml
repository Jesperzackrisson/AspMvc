@model IEnumerable<ProjectMvc.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1 class=" productTitle text-center text-dark mb-4">Produkter</h1>




    <div class="row row-cols-1 row-cols-md-4 g-4 container m-auto">
        @foreach (var item in Model)
            {
        <div class="col">
            <div class="card h-100 shadow">
                @*<h4>@Html.DisplayFor(modelItem => item.SubCategory.Name)</h4>*@
                <div class="card-body">
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="">
                    <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text text-center mt-3 mb-3">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div class="d-flex justify-content-around mb-5">
                    <!-- <p class="text-danger" style="font-weight: 700; font-size: 1.5rem;">24 990:-</p> -->
                    <!-- <button class="btn btn-sm btn-dark rounded-pill text-light mt-3 mb-3 shadow">24990kr - Lägg till</button> -->
                    <button class="btn btn-outline-success ">
                        <i class="fas fa-shopping-cart me-3"></i>
                        @Html.DisplayFor(modelItem => item.Price):-
                    </button>
                    <a class="btn btn-dark" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-info"></i>
                        Information
                    </a>
                </div>
            </div>
        </div>
            }
        
    </div>

    <footer class="bg-dark text-light mt-5 text-center productFooter">
        <div class="footerInfo">
            <h3 class="text-white mt-5">Webshop.com</h3>
            <div class="d-flex mt-3">
                <ul class="list-inline mx-auto">
                    <li class="list-inline-item">
                        <a href="#" class="text-decoration-none text-secondary">HEM</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" class="text-decoration-none text-secondary">PRODUKTER</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" class="text-decoration-none text-secondary">NY PRODUKT</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" class="text-decoration-none text-secondary">OM OSS</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" class="text-decoration-none text-secondary">KONTAKT</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex mt-3">
                <ul class="list-inline mx-auto">
                    <li class="list-inline-item">
                        <i class="fab fa-facebook-f text-success"></i>
                    </li>
                    <li class="list-inline-item">
                        <i class="fab fa-twitter text-success"></i>
                    </li>
                    <li class="list-inline-item">
                        <i class="fab fa-linkedin-in text-success"></i>
                    </li>
                    <li class="list-inline-item">
                        <i class="fab fa-instagram text-success"></i>
                    </li>
                </ul>
            </div>
        </div>
           

    </footer>

